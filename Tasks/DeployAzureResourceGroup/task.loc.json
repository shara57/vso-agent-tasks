      "name": "outputVariable",
      "type": "string",
      "label": "ms-resource:loc.input.label.outputVariable",
      "required": false,
      "defaultValue": "",
      "groupName": "output",
      "helpMarkDown": "ms-resource:loc.input.help.outputVariable"
    }
