  "inputs": [
    {
      "name": "wrapperScript",
      "type": "filePath",
      "label": "ms-resource:loc.input.label.wrapperScript",
      "defaultValue": "gradlew",
      "required": true,
      "helpMarkDown": "ms-resource:loc.input.help.wrapperScript"
    },
    {
      "name": "options",
      "type": "string",
      "label": "ms-resource:loc.input.label.options",
      "defaultValue": "",
